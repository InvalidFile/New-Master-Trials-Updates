Patch "Hide New Game+" by "Hyper"
{
    /* 0x140ACF05D */
    long sig = ScanSignature
    (
        "\x0F\x85\xC1\x00\x00\x00\x33\xD2",
        "xxxxxxxx"
    );

    if (sig == 0)
        return;

    WriteProtected<byte>(sig, 0xEB, 0x7B);
}

